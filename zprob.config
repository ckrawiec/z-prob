#config parameters

[I/O]
#file names
template_file = template_file.fits
target_file = target_file.fits
output_file = output_file.fits

[debugging]
#debug parameters
debug = False
#N_debug = 300

[parameters]
#bands to use, same case as column names require
filters = 'GRIZ'

#redshift groups for which to calculate probability
#of target membership
redshift_groups = [[0.001, 0.5],
            	   [  0.5, 9.9]]

#number of threads for multiprocessing
num_threads = 4
#'tree' or 'full' integration over templates
integration = 'tree' 
k_near = 10000 #nearest neighbors if integration=tree

[data]
#target column names, case sensitive
target_id_column = ID
target_data_column = DATA_COLUMN_{}
target_error_column = DATAERR_COLUMN_{}

#template column names, case sensitive
template_id_column = ID
template_data_column = DATA_COLUMN_{}
redshift_column = Z

